<Window x:Class="RacingGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Racing Game" Height="700" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Racing Game" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="10"/>
        
        <!-- Car Selection and Race Info -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Select Car:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="CarSelectionComboBox" SelectionChanged="CarSelection_Changed"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                <TextBlock x:Name="CurrentLapLabel" Text="Lap: 1/3" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock x:Name="RaceStatusText" FontSize="14" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
            
            <StackPanel Grid.Column="2">
                <TextBlock Text="Time Remaining:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ProgressBar x:Name="TimeProgressBar" Height="20" Maximum="120" Value="120"/>
                <TextBlock x:Name="TimeLabel" Text="02:00" HorizontalAlignment="Center" Margin="0,2,0,0"/>
            </StackPanel>
        </Grid>
        
        <!-- Selected Car Details -->
        <Border Grid.Row="2" BorderBrush="DarkBlue" BorderThickness="2" Margin="10" Padding="15">
            <Grid x:Name="SelectedCarPanel">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" x:Name="SelectedCarName" Text="Select a car" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                
                <!-- Fuel Level -->
                <StackPanel Grid.Row="1" Margin="0,0,0,10">
                    <TextBlock Text="Fuel Level:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ProgressBar x:Name="FuelProgressBar" Height="25" Maximum="100" Value="100" Foreground="Orange"/>
                    <TextBlock x:Name="FuelLabel" Text="100/100" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                </StackPanel>
                
                <!-- Speed/Status -->
                <StackPanel Grid.Row="2" Margin="0,0,0,10">
                    <TextBlock Text="Current Status:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="SpeedStatusLabel" Text="Speed: 0 km/h" FontSize="14" Background="LightGray" Padding="5"/>
                </StackPanel>
                
                <!-- Progress Indicator -->
                <StackPanel Grid.Row="3" Margin="0,0,0,15">
                    <TextBlock Text="Track Progress:" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
                    <TextBlock x:Name="ProgressIndicator" Text="[    ]" FontFamily="Consolas" FontSize="20" Background="Black" Foreground="Lime" Padding="10" HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <Button x:Name="SpeedUpButton" Content="ðŸš€ Speed Up" Click="SpeedUp_Click" Margin="0,0,10,0" Padding="10,5" IsEnabled="False"/>
                    <Button x:Name="MaintainSpeedButton" Content="âž¡ï¸ Maintain Speed" Click="MaintainSpeed_Click" Margin="0,0,10,0" Padding="10,5" IsEnabled="False"/>
                    <Button x:Name="PitStopButton" Content="â›½ Pit Stop" Click="PitStop_Click" Padding="10,5" IsEnabled="False"/>
                </StackPanel>
                
                <!-- All Cars Status -->
                <ScrollViewer Grid.Row="5">
                    <ItemsControl x:Name="CarsListView">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="2" Padding="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Name}" FontWeight="Bold"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Status}" Margin="10,0,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="StartRaceButton" Content="ðŸ Start New Race" Click="StartRace_Click" Margin="0,0,10,0" Padding="15,5"/>
            <Button x:Name="ResetButton" Content="ðŸ”„ Reset" Click="Reset_Click" Padding="15,5"/>
        </StackPanel>
    </Grid>
</Window>